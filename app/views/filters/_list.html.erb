
<div class="row">
  <div class="columns filters-list data-equalizer">

  <h1><%= list_user.username %>'s Filters</h1>

  <%= render 'shared/search_term_form' %>

  <div class="filter-list">
    <% @filters.each_with_index do |filter, i| %>
    <div class="row">
      <div class="filter column" id="filter-<%= filter.id %>">
        <% unless i === 0 %>
          <hr>
        <% end %>
        <h3><%= link_to filter.search_term, filter %></h3>

        <ul class="inline-list">
          <% if publish? filter %>
            <% if(filter.published?) %>
            <li><%= link_to 'Unpublish', publish_filter_path(filter), class: 'button small' %></li>
            <% else %>
            <li><%= link_to 'Publish', publish_filter_path(filter), class: 'button small success' %></li>
            <% end %>
          <% end %>
          <% if destroy? filter %>
            <li><%= link_to 'Delete', filter, method: :delete, data: { confirm: 'Are you sure you want to delete this filter?' }, class: 'button small alert' %></li>
          <% end %>
        </ul>
      </div>
    </div>
    <% end %>
  </div>
</div>
