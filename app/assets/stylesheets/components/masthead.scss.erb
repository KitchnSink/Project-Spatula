

.masthead {
  background: #F25A3B;
  padding-bottom: 1em;
  background-size: cover;
  position: relative;
  margin-top: -48px;

  h1, h2, h3 {
    color: rgba(255, 255, 255, 1);
  }

  .columns {
    bottom: 0;
    display: table;
    left: 0;
    margin: auto;
    position: absolute;
    right: 0;
    top: 0;
  }
}
